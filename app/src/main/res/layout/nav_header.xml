<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_header_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="32sp">

    <ImageView
        android:id="@+id/avatarNavDrw"
        android:layout_width="72sp"
        android:layout_height="72sp"
        android:layout_gravity="center"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/userNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="4sp"
        android:text="email@todo.com"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/occupationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="4sp"
        android:text="Occupation"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4sp"
            android:layout_weight="1"
            app:cardCornerRadius="8sp">

            <TextView
                android:id="@+id/unCompletedTasksNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/rounded_corners"
                android:paddingVertical="16sp"
                android:text="10 Tasks left"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4sp"
            android:layout_weight="1"
            app:cardCornerRadius="8sp">

            <TextView
                android:id="@+id/completedTasksNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                android:paddingVertical="16sp"
                android:text="5 Tasks done"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="8dp">

        <!-- Gray background view -->
        <View
            android:id="@+id/progressBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <!-- Progress bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/colorPrimary" />
    </FrameLayout>

</LinearLayout>